<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
    <menuitem id="automovil_menu_root" name="Automovil" sequence="10"/>


    <!-- This Menu Item Must have a parent -->
    <menuitem id="automovil_menu_categ" name="Automoviles" parent="automovil_menu_root" sequence="10"/>



    <!-- model.name action window -->
    <record id="automovil_action" model="ir.actions.act_window">
        <field name="name">Automoviles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">automovil</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create New Automovil
            </p><p>
                You can create more Automoviles here
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="automovil_menu_act" name="Automovil" parent="automovil_menu_categ" action="automovil_action" sequence="10"/>

    <!-- model.name tree view -->
    <record id="automovil_view_tree" model="ir.ui.view">
        <field name="name">automovil.view.tree</field>
        <field name="model">automovil</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_year"/>
                <field name="is_on"/>
                <field name="velocity"/>
                <field name="doors_number"/>
            </tree>
        </field>
    </record>

    <!-- model.name form view -->
    <record id="automovil_view_form" model="ir.ui.view">
        <field name="name">automovil.view.form</field>
        <field name="model">automovil</field>
        <field name="arch" type="xml">
            <form string="Automovil">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group col="4" name="model_group">
                        <field name="model_year"/>
                        <field name="doors_number"  />

                    </group>
                    <separator string="Services" colspan="4" />
                    <group name="services_group" >
                        <field name="last_service_date"/>
                        <field name="last_verification_date"/>
                        <field name="next_verification_date"/>
                        <field name="cylinders" />
                    </group>
                    <notebook>
                        <page string="Description" name="description_page">
                            <group>
                                <field name="description" nolabel="1" />
                            </group>
                        </page>
                        <page string="Status Engine" name="status_page">
                            <group>
                                <field name="is_on"/>
                                <field name="velocity"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


</odoo>

<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
    <menuitem id="automovil_menu_root" name="Automovil" sequence="10"/>


    <!-- This Menu Item Must have a parent -->
    <menuitem id="automovil_menu_categ" name="Automoviles" parent="automovil_menu_root" sequence="10"/>



    <!-- model.name action window -->
    <record id="automovil_action" model="ir.actions.act_window">
        <field name="name">Automoviles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">automovil</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create New Automovil
            </p><p>
                You can create more Automoviles here
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="automovil_menu_act" name="Automovil" parent="automovil_menu_categ" action="automovil_action" sequence="10"/>

    <!-- model.name tree view -->
    <record id="automovil_view_tree" model="ir.ui.view">
        <field name="name">automovil.view.tree</field>
        <field name="model">automovil</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_year"/>
                <field name="last_service_date" />
                <field name="is_on"/>
                <field name="velocity"/>
                <field name="doors_number"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <!-- model.name form view -->
    <record id="automovil_view_form" model="ir.ui.view">
        <field name="name">automovil.view.form</field>
        <field name="model">automovil</field>
        <field name="arch" type="xml">
            <form string="Automovil">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="stop,run"
                    options="{'clickable': '1'}"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1><field name="name" placeholder="Describe the item..." /></h1>
                    </div>

                    <group col="4" name="model_group">
                        <field name="model_year"/>
                        <field name="doors_number"  />

                    </group>


                    <group col="2" name="services_group" >
                        <separator string="Services" colspan="2" />
                        <group>
                        <field name="last_service_date"/>
                        <field name="last_verification_date"/>
                        </group>
                        <group>
                        <field name="next_verification_date"/>
                        <field name="cylinders" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description_page">
                            <group>
                                <field name="description" nolabel="1" />
                            </group>
                        </page>
                        <page string="Status Engine" name="status_page">
                            <group>
                                <field name="is_on"/>
                                <field name="velocity"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


    <!-- model.name search view -->
    <record id="automovil_view_search" model="ir.ui.view">
        <field name="name">automovil.view.search</field>
        <field name="model">automovil</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <!-- Filtros -->
                <field name="name"/>
                <field name="model_year"/>
                <field name="cylinders"/>
                <separator string="Filters" />
                <filter string="Engine On"
                        name="filter_engine_on"
                    domain="[('is_on','=',True)]" />
                <filter string="Engine On Or Velocity Positive"
                    name="filter_engine_on_or_velocity_positive"
                domain="['|',('is_on','=',True),('velocity','>',0.0)]" />

                <filter string="Service More than 6 Months"
                name="filter_last_6_months"
                domain="[('last_service_date','&lt;=', (context_today() - relativedelta(months=6)).strftime('%%Y-%%m-%%d'))]"/>

                <group>
                    <filter string="Service"
                        name="group_by_service_last_6_months"
                        context="{'group_by': 'last_service_date:month'}"
                        />
                    <filter string="State"
                        name="group_by_state"
                        context="{'group_by': 'state'}"
                        />

                </group>
            </search>
        </field>
    </record>


</odoo>
